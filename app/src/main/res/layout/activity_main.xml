<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    android:background="@color/background_material_dark"
    android:weightSum="1.0"
    tools:context=".MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight=".7">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="1.0"
            android:background="@color/button_text">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/player1"
                android:id="@+id/player"
                android:layout_weight="0.2"
                android:textSize="25sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/p1"
                android:id="@+id/p1"
                android:layout_weight="0.1"
                android:textSize="20sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/player1Score"
                android:layout_weight="0.3"
                android:textSize="25sp"
                android:text="0" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/p2"
                android:id="@+id/p2"
                android:layout_weight="0.1"
                android:textSize="20sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/player2Score"
                android:layout_weight="0.3"
                android:textSize="25sp"
                android:text="0" />

        </LinearLayout>

        <FrameLayout
            android:id="@+id/die1"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:background="@drawable/die_face_1"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"></FrameLayout>

        <FrameLayout
            android:id="@+id/die2"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:background="@drawable/die_face_2"
            android:layout_alignTop="@+id/die1"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:textSize="20sp">
        </FrameLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dip"
            android:layout_weight=".7"
            android:layout_alignEnd="@+id/die2"
            android:layout_alignParentBottom="true"
            android:layout_below="@+id/die1">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Round:"
                android:id="@+id/round"
                android:textSize="25sp"
                android:layout_marginStart="65dp"
                android:layout_centerVertical="true"
                android:layout_alignParentStart="true" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hold"
                android:id="@+id/hold"
                android:textSize="20sp"
                android:background="@color/background"
                android:layout_marginStart="47dp"
                android:layout_centerVertical="true"
                android:layout_toEndOf="@+id/count" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/count"
                android:textSize="25sp"
                android:layout_alignTop="@+id/round"
                android:layout_toEndOf="@+id/round"
                android:text="0" />

        </RelativeLayout>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="0.3">

        <Button
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:text="@string/roll_die"
            android:textSize="30sp"
            android:textColor="#000000"
            android:id="@+id/roll_dice"
            android:layout_alignParentBottom="true"
            android:background="@color/button_normal" />
    </RelativeLayout>
</LinearLayout>
